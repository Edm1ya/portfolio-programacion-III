---
import Image from "astro/components/Image.astro";

interface Props {
  image: ImageMetadata;
  title: string;
  description: string;
  links: string;
}

const { image, title, links, description } = Astro.props;
---

<div
  class="flex flex-col justify-center items-center mb-8  gap-4 md:flex-row lg:items-start lg:justify-start" 
>
  <a href={links} target="_blank">
    <Image src={image} alt="Imagen de Perfil" class="h-48 w-96" />
  </a>
  <div class="flex flex-col w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-xl font-semibold">{title}</h3>
    <div class="mt-2">
      <p>{description}</p>
    </div>
  </div>
</div>
